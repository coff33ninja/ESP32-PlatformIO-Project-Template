{
  "name": "ESP32 PlatformIO Template",
  "version": "1.1.0",
  "description": "Complete PlatformIO development environment for ESP32 projects",
  "author": "Developer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "hardware": {
    "platform": "espressif32",
    "board": "esp32-s3-devkitc-1",
    "interfaces": {
      "gpio": true,
      "serial": true,
      "wifi": true,
      "bluetooth": true
    },
    "board_name": "ESP32-S3-DevKitC-1",
    "flash_size": "8MB",
    "psram": true,
    "led_pin": 48
  },
  "features": {
    "build_system": {
      "environments": [
        "production",
        "debug",
        "ota"
      ],
      "automation": true,
      "cross_platform": true,
      "multi_board_support": true
    },
    "development": {
      "vscode_integration": true,
      "debugging": true,
      "serial_monitor": true,
      "board_configuration": true
    },
    "deployment": {
      "usb_upload": true,
      "ota_updates": true,
      "ci_cd": true
    },
    "supported_boards": {
      "esp32": [
        "esp32dev",
        "esp32-wrover-kit",
        "m5stack-core-esp32",
        "ttgo-t-display"
      ],
      "esp32_s2": [
        "esp32-s2-saola-1"
      ],
      "esp32_s3": [
        "esp32-s3-devkitc-1",
        "esp32-s3-box"
      ],
      "esp32_c3": [
        "esp32-c3-devkitm-1"
      ],
      "esp32_c6": [
        "esp32-c6-devkitc-1"
      ]
    }
  },
  "development": {
    "environments": {
      "production": "esp32-s3-devkitc-1",
      "debug": "esp32-s3-devkitc-1_debug",
      "ota": "esp32-s3-devkitc-1_ota"
    },
    "tools": {
      "build_system": "PlatformIO",
      "ide": "VS Code",
      "debugger": "esp-prog",
      "monitor": "Serial"
    }
  },
  "dependencies": {
    "libraries": [
      "Example libraries configured (easily customizable)"
    ],
    "frameworks": [
      "Arduino"
    ],
    "tools": [
      "PlatformIO",
      "ESP32 Toolchain"
    ]
  },
  "scripts": {
    "build": "pio run",
    "upload": "pio run --target upload",
    "monitor": "pio device monitor",
    "deploy": "python scripts/dev.py deploy",
    "setup": "python scripts/setup.py"
  }
}